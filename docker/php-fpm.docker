FROM php:7.1-fpm

RUN apt-get update && apt-get install -y gnupg2 \
    && curl -sL https://deb.nodesource.com/setup_8.x | bash -

RUN apt-get update && apt-get install -y libmcrypt-dev mysql-client zlib1g-dev libxrender1 libfontconfig1 libxext6 libpng-dev libldap2-dev nodejs \
    && docker-php-ext-install mcrypt pdo_mysql gd zip ldap

WORKDIR /var/www
