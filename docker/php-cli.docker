FROM php:7.1-cli

RUN apt-get update && apt-get install -y gnupg2 \
    && curl -sL https://deb.nodesource.com/setup_8.x | bash -

RUN apt-get update && apt-get install -y libmcrypt-dev mysql-client git zlib1g-dev libxrender1 libfontconfig1 libxext6 libpng-dev libldap2-dev nodejs \
    && docker-php-ext-install mcrypt pdo_mysql pcntl zip gd ldap

RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

WORKDIR /var/www
